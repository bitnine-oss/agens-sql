AROPT = cr

ifdef ELF_SYSTEM
export_dynamic = -Wl,-E
rpath = -Wl,-R$(pglibdir)
shlib_symbolic = -Wl,-Bsymbolic -lc
else
rpath = -R$(pglibdir)
endif

DLSUFFIX = .so
CFLAGS_SL = -fpic -DPIC

%.so: $(SO_OBJS)
ifdef ELF_SYSTEM
	$(LD) -x -Bshareable -o $@ $<
else
	$(LD) $(LDREL) $(LDOUT) $<.obj -x $<
	@echo building shared object $@
	@rm -f $@.pic
	@${AR} cq $@.pic `lorder $<.obj | tsort`
	${RANLIB} $@.pic
	@rm -f $@
	$(LD) -x -Bshareable -Bforcearchive \
	  -o $@ $@.pic
endif

sqlmansect = 7
